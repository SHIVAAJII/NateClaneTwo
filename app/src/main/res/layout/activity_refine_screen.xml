<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RefineScreen"
    android:orientation="vertical"

    >



    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


       <androidx.appcompat.widget.Toolbar
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/refine_toolbarId"
           android:theme="@style/ThemeOverlay.AppCompat.Light"/>







    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"

        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your Availability"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAppearance="@color/black"
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/teal_200"
            android:padding="10dp"
            android:entries="@array/presence"
            android:id="@+id/spinnerId"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Add your status"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAppearance="@color/black"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:inputType="textMultiLine"
                android:maxLength="250"
                android:overScrollMode="always"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:scrollbarStyle="insideInset"
                />




        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Hyper local Distance"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAppearance="@color/black"
            />


        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:id="@+id/seek_bar"
            android:layout_marginTop="5dp"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Km"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_id"
                android:text="0"

                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/black"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_gravity="end"
                android:layout_alignParentEnd="true"
                android:text="100 Km"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Select Purpuse"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAppearance="@color/black"/>


        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
            android:id="@+id/tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:toggle_selectableAmount="5"
            app:justifyContent="space_between"
            app:flexWrap="wrap">

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/tag1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                app:toggle_text="Coffee" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/tag2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                app:toggle_text="Business" />
            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/line3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                app:toggle_text="Hobbies" />
            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/ta"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                app:toggle_text="Friendship" />
            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/tasg2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                app:toggle_text="Movies" />
            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/tsasg2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                app:toggle_text="Dinning" />
            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/tsag2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                app:toggle_text="Dating" />
            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/taswg2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                app:toggle_text="Matrimony" />
            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/tqag2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                app:toggle_text="Services" />

            <!-- ... -->

        </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>








    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="100dp"
            android:text="Save and Explorw"
            android:textAlignment="center"
            android:id="@+id/refine_save_btnId"
            />
    </RelativeLayout>

</LinearLayout>